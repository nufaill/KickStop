<%- include('../layouts/user/header') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span><a href="/profile">Profile</a></span> 
                <span></span> Wallet
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col">Wallet Balance</th>
                                    <!-- <th scope="col">Add Money</th>
                                    <th scope="col">Withdraw</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <% if (wallet && wallet.balance) { %>
                                        <td class="wallet-balance" data-title="Balance">
                                            <strong style="font-size: 40px;">₹<%=wallet.balance.toLocaleString()%></strong>
                                        </td>
                                    <% } else { %>
                                        <td class="wallet-balance" data-title="Balance">
                                            <strong style="font-size: 40px;">₹0</strong>
                                        </td>
                                    <% } %>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col">Date</th>
                                    <th scope="col">Transaction Type</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                                    <% wallet.transactions.reverse().forEach(transaction => { %>
                                        <tr>
                                            <td data-title="Date"><%= transaction.date.toLocaleDateString() %></td>
                                            <td data-title="Transaction Type"><%= transaction.type %></td>
                                            <td data-title="Amount">
                                                <% if (transaction.type === 'Purchase' || transaction.type === 'Debit') { %>
                                                    <b class="text-danger" style="font-size: 25px;">-</b>&nbsp;
                                                    <strong class="text-danger">₹<%= transaction.amount.toLocaleString() %></strong>
                                                <% } else { %>
                                                    <b class="text-success" style="font-size: 20px;">+</b>&nbsp;
                                                    <strong class="text-success">₹<%= transaction.amount.toLocaleString() %></strong>
                                                <% } %>
                                            </td>
                                            <td data-title="Status">
                                                <span class="<%= transaction.status === 'Completed' ? 'text-success' : 'text-warning' %> font-weight-bold">
                                                    <%= transaction.status %>
                                                </span>
                                            </td>
                                            <td data-title="Description"><%= transaction.description %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5">No transactions available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<%- include('../layouts/user/footer') %>

<script>
    function confirmAddMoney() {
        Swal.fire({
            title: "Add Money",
            text: "Do you want to add money to your wallet?",
            icon: "info",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, add money!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/wallet/add-money";
            }
        });
    }

    function confirmWithdraw() {
        Swal.fire({
            title: "Withdraw Money",
            text: "Do you want to withdraw money from your wallet?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, withdraw!"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/wallet/withdraw";
            }
        });
    }
</script>