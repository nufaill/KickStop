<%- include("../../views/layouts/user/header") %>

    <title>KickStop - Page Not Found</title>
    <style>
        @font-face {
            font-family: 'Avenir';
            src: url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap');
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Avenir', 'Nunito', sans-serif;
        }

        body {
            background-color: #f9f9f9;
        }

        .error-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0; 
    max-width: 100%; 
    margin: 0;
    gap: 4rem;
}


        .error-image {
            width: 400px;
            height: auto;
            animation: float 3s ease-in-out infinite;
        }

        .error-content {
            max-width: 500px;
        }

        .error-title {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            line-height: 1.1;
        }

        .error-message {
            font-size: 1.25rem;
            color: #555;
            margin-bottom: 2rem;
            line-height: 1.5;
        }

        .back-button {
            display: inline-block;
            background-color: #800000;
            color: white;
            padding: 1rem 2rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #800000;
        }

        .social-footer {
            text-align: center;
            padding: 2rem;
            background: white;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 1rem;
        }

        .social-icon {
            width: 24px;
            height: 24px;
            transition: transform 0.3s ease;
        }

        .social-icon:hover {
            transform: scale(1.1);
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-20px);
            }
        }

        @media (max-width: 968px) {
            .error-container {
                flex-direction: column;
                text-align: center;
                gap: 2rem;
            }

            .error-image {
                width: 300px;
            }

            .error-title {
                font-size: 2.5rem;
            }

            .nav-links {
                display: none;
            }
        }
        .error-title1 {
    font-size: 12rem;
    font-weight: 900;
    color: #800000;
    text-shadow: 4px 4px 10px rgba(0, 0, 0, 0.4);
    margin-bottom: 2rem;
    line-height: 1;
    text-align: center;
    animation: pulse 2s infinite;
}

