  margin-bottom: 1.5rem;
}

/* Address Cards */
.address-card {
  background: white;
  border-radius: 12px;
  border: 1px solid var(--gray-200);
  box-shadow: var(--shadow-sm);
  transition: var(--transition-all);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.address-card:hover {
  box-shadow: var(--shadow-lg);
  transform: translateY(-4px);
}

.card-header {
  background: var(--primary-50);
  padding: 1rem;
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--primary-600);
  border-bottom: 1px solid var(--gray-200);
}

.card-body {
  padding: 1.5rem;
  color: var(--gray-600);
}

.card-footer {
  background: var(--gray-50);
  padding: 1rem;
  text-align: right;
  border-top: 1px solid var(--gray-200);
}

.card-footer .btn {
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
  border-radius: 8px;
  font-weight: 500;
  transition: var(--transition-all);
}

.btn-outline-primary {
  border: 1px solid var(--l-600);
  color: var(--primary-600);
}

.btn-outline-primary:hover {
  background: var(--primary-100);
  color: var(--primary-700);
}

.btn-outline-danger {
  border: 1px solid var(--danger-600);
  color: var(--danger-600);
}

.btn-outline-danger:hover {
  background: var(--danger-50);
  color: var(--danger-700);
}

/* Address Details */
.address-name {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--gray-800);
  margin-bottom: 0.5rem;
}

.address-details {
  font-size: 1rem;
  color: var(--gray-600);
  margin-bottom: 1rem;
}

/* Layout */
.address-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-top: 1.5rem;
}

@media (min-width: 1024px) {
  .dashboard-container {
    max-width: 1600px;
    padding: 2rem 6rem;
  }

  .addresses-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .address-card {
    padding: 1rem;
  }

  .card-body {
    padding: 1.5rem 2rem;
  }
}

