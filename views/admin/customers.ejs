<%- include('../layouts/admin/header') %>
<style>
/* General Styles */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f5f5;
    margin: 0;
    padding: 0;
}

.card-body {
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(128, 0, 0, 0.1);
    margin: 20px auto;
    max-width: 1200px;
    border-radius: 8px;
    animation: fadeIn 0.5s ease-in-out;
}

/* Search Form */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f6f9;
    margin: 0;
    padding: 0;
}

.card-body {
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 20px auto;
    max-width: 1200px;
    border-radius: 8px;
    animation: fadeIn 0.5s ease-in-out;
}

/* Updated Search Form */
.usersearchoption {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 20px;
}

.usersearchoption .input-group {
    display: flex;
    width: auto;
}

.usersearchoption .form-control {
    width: 150px;
    border-radius: 4px;
    border: 1px solid #ddd;
    padding: 8px 10px;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.usersearchoption .form-control:focus {
    border-color: #800000;
    box-shadow: 0 0 5px rgba(128, 0, 0, 0.3);
}
.clear-search {
    margin-left: 8px;
    font-size: 1rem;
    color: #007bff;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.clear-search:hover {
    background-color: rgba(0, 123, 255, 0.1);
    color: #0056b3;
    transform: scale(1.1);
}

/* Adjust alignment for the input and the icon */
.input-group {
    align-items: center;
}

/* Loading indicator */
.search-spinner {
    display: none;
    width: 20px;
    height: 20px;
    margin-left: 10px;
    border: 2px solid #f3f3f3;
    border-top: 2px solid #007bff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}


.table {
    width: 100%;
    margin-bottom: 20px;
    border-collapse: collapse;
    background-color: #fff;
}
.table td {
    padding: 12px 20px;
    text-align: left;
    border-bottom: 1px solid #e6d9d9;
}
.table th {
    background-color: #800000;
    color: #fff;
    font-weight: bold;
    padding: 12px 20px;
}
.table-hover tbody tr {
    transition: background-color 0.3s ease;
}
.table-hover tbody tr:hover {
    background-color: #fff5f5;
}

.abadge {
    display: inline-block;
    padding: 6px 12px;
    font-size: 12px;
    font-weight: bold;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: center;
    min-width: 80px;
    line-height: 1.5;
    white-space: nowrap;
}
.abadge.alert-success {
    background-color: #B22222;
    color: #fff;
}
.abadge.alert-danger {
    background-color: #800000;
    color: #fff;
}


.btn {
    padding: 8px 15px;
    font-size: 14px;
    border-radius: 4px;
    font-weight: bold;
    text-transform: capitalize;
    letter-spacing: 0.5px;
    transition: transform 0.2s ease, background-color 0.3s ease;
    display: inline-block;
    width: 120px;
    text-align: center;
    text-decoration: none;
}

.btn-danger {
    background-color: #800000;
    color: #fff;
    border: none;
}

.btn-danger:hover {
    background-color: #660000;
    transform: scale(1.05);
}

.btn-success {
    background-color: #a52a2a;
    color: #fff;
    border: none;
}

.btn-success:hover {
    background-color: #8b2323;
    transform: scale(1.05);
}

.pagination .page-item .page-link {
    padding: 8px 12px;
    background-color: #800000;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    display: block;
}

.pagination .page-item .page-link:hover {
    background-color: #660000;
}

.pagination .page-item.active .page-link {
    background-color: #a52a2a;
}

.search-spinner {
    border: 2px solid #f3f3f3;
    border-top: 2px solid #800000;
}

.clear-search {
    color: #800000;
}

.clear-search:hover {
    background-color: rgba(128, 0, 0, 0.1);
    color: #660000;
}

@media (max-width: 768px) {
    .card-body {
        padding: 15px;
    }
    .usersearchoption {
        flex-direction: column;
        gap: 10px;
    }
    .usersearchoption .form-control {
        font-size: 14px;
    }
    .usersearchoption .btn {
        font-size: 14px;
        width: 10px;
    }
    .table th, .table td {
        font-size: 14px;
        padding: 8px 10px;
    }
    .btn {
        width: 100%;
        margin-bottom: 10px;
    }
}

</style>
<div class="card-body">

    <!-- Search Form -->
    <form class="user-usersearchoption" id="usersearchoption" method="get" action="/admin/users">
        <div class="input-group">
            <input 
                type="text" 
                class="form-control" 
                name="search" 
                placeholder="Search Users"
                value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
            >
            <button type="button" class="clear-search" id="clearSearch" aria-label="Clear search">&times;</button>
        </div>
        <div class="search-spinner" id="searchSpinner">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </form>

    <!-- User Table -->
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (data && data.length > 0) { %>
                    <% for (let i = 0; i < data.length; i++) { %>
                        <tr>
                            <td><%= data[i].username %></td>
                            <td><%= data[i].email %></td>
                            <td>
                                <% if (data[i].isBlocked) { %>
                                    <span class=" abadge rounded-pill  alert-danger">Blocked</span>
                                <% } else { %>
                                    <span class="abadge rounded-pill alert-success">Active</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (!data[i].isBlocked) { %>
                                    <button class="btn btn-danger">
                                        <a href="#" onclick="confirmUserAction('block', '<%= data[i].username %>', '<%= data[i]._id %>')" class="text-white">Block</a>
                                    </button>
                                <% } else { %>
                                    <button class="btn btn-success">
                                        <a href="#" onclick="confirmUserAction('unblock', '<%= data[i].username %>', '<%= data[i]._id %>')" class="text-white">Unblock</a>
                                    </button>
                                <% } %>
                            </td>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">No users found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<div class="pagination-area mt-15 mb-50">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-start">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>">
                        <%= i %>
                    </a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const usersearchoption = document.getElementById('usersearchoption');
        const searchInput = usersearchoption.querySelector('input[name="search"]');
        const searchSpinner = document.getElementById('searchSpinner');
        let timeout = null;
    
        // Function to perform search
        const performSearch = () => {
            const query = searchInput.value.trim();
            const url = new URL(window.location.href);
            
            if (query) {
                url.searchParams.set('search', query);
            } else {
                url.searchParams.delete('search');
            }
            
            // Show spinner
            searchSpinner.style.display = 'block';
            
            // Navigate to search URL
            window.location.href = url.toString();
        };
    
        // Handle input changes with debounce
        searchInput.addEventListener('input', function() {
            clearTimeout(timeout);
            timeout = setTimeout(performSearch, 500);
        });
    
        // Handle form submission
        usersearchoption.addEventListener('submit', function(e) {
            e.preventDefault();
            performSearch();
        });
        clearSearch.addEventListener('click', function () {
        searchInput.value = '';
        performSearch();
    });
    });


    function confirmUserAction(action, username, userId) {
    const actionText = action === 'block' ? 'Block' : 'Unblock';
    const actionVerb = action === 'block' ? 'blocking' : 'unblocking';
    
    Swal.fire({
        title: 'Are you sure?',
        text: `Do you want to ${actionVerb} user: ${username}?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#800000',
        cancelButtonColor: '#d33',
        confirmButtonText: `Yes, ${actionText} it!`,
        cancelButtonText: 'Cancel',
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = action === 'block' 
                ? `/admin/blockcustomer?id=${userId}` 
                : `/admin/unblockcustomer?id=${userId}`;
            
            Swal.fire(
                `${actionText}ed!`,
                `User ${username} has been ${actionVerb}d successfully.`,
                'success'
            );
        }
    });
}
    </script>

