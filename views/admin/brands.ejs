<%- include("../../views/layouts/admin/header") %>
<style>
  .error-message {
    color: #dc3545;
    font-size: 14px;
    margin-top: 5px;
    display: block;
    font-weight: 500;
  }
  
  .input-error {
    border-color: #dc3545 !important;
  }
  
  .input-error:focus {
    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
  }
  
  .brand-image {
    width: 40px;
    height: 40px;
    object-fit: cover;
    border-radius: 50%;
  }
  
  .action-buttons .btn {
    margin-left: 5px;
  }
  .action-buttons .btn {
    margin-left: 5px;
    width: 150px; /* Set the width of both buttons */
    text-align: center; /* Center the text inside the buttons */
}

/* Block button color */
.action-buttons .btn-warning {
    background-color: #800000;
    color: white;
    border: none;
}

.action-buttons .btn-warning:hover {
    background-color: #5a0000; /* Darker shade on hover */
}

/* Unblock button color */
.action-buttons .btn-success {
    background-color: #800000;
    color: white;
    border: none;
}

.action-buttons .btn-success:hover {
    background-color: #5a0000; /* Darker shade on hover */
}

/* Delete button (same as before)
.action-buttons .btn-danger {
    background-color: #dc3545;
    color: white;
    border: none;
}

.action-buttons .btn-danger:hover {
    background-color: #c82333;
} */
</style>

<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Brands</h2>
      <p>Add, edit or delete a brand</p>
    </div>
    <div>
      <input type="text" placeholder="Search Brands" class="form-control bg-white">
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <!-- Add Brand Form -->
        <div class="col-md-3">
          <form method="post" action="/admin/addbrand" enctype="multipart/form-data" id="brandForm" novalidate>
            <div class="form-group">
              <label for="brand_name" class="form-label">Brand Name</label>
              <input type="text" name="name" placeholder="Type here" class="form-control" id="brand_name" />
            </div>
            <div class="form-group">
              <label for="brand_image" class="form-label">Brand Image</label>
              <div class="input-upload">
                <img src="" alt="" id="preview" style="max-width: 100%; max-height: 150px; display: none;" />
                <input class="form-control border mt-2" name="image" type="file" id="brand_image"
                  accept="image/jpeg,image/png,image/gif" onchange="previewImage(event)" />
              </div>
            </div>
            <div class="d-grid">
              <button class="btn btn-primary" type="submit">Add Brand</button>
            </div>
          </form>
        </div>

        <!-- Brand List Table -->
        <div class="col-md-9">
          <% if (data && data.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th class="text-center">No.</th>
                    <th>Brand</th>
                    <th>Logo</th>
                    <th>Status</th>
                    <th class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((brand, index) => { %>
                    <tr>
                      <td class="text-center"><%= index + 1 %></td>
                      <td><%= brand.brandName %></td>
                      <td>
                        <div class="d-flex align-items-center justify-content-center">
                          <img src="/uploads/re-image/<%= brand.brandImage %>" 
                               alt="<%= brand.brandName %>"
                               class="brand-image" />
                        </div>
                      </td>
                      <td>
                        <% if(brand.isBlocked) { %>
                          <span class="badge rounded-pill alert-danger">Blocked</span>
                        <% } else { %>
                          <span class="badge rounded-pill alert-success">Active</span>
                        <% } %>
                      </td>
                      <td class="text-end">
                        <div class="action-buttons">
                            <% if (brand.isBlocked) { %>
                                <a href="/admin/unblockbrand?id=<%= brand._id %>" 
                                   class="btn btn-success">Unblock</a>
                            <% } else { %>
                                <a href="/admin/blockbrand?id=<%= brand._id %>" 
                                   class="btn btn-warning">Block</a>
                            <% } %>
                            <a href="/admin/deletebrand?id=<%= brand._id %>" 
                               class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this brand?')">Delete</a>
                        </div>
                    </td>
                    
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            
            <!-- Pagination -->
            <% if (totalPages > 1) { %>
              <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                  <ul class="pagination justify-content-center">
                    <% for(let i = 1; i <= totalPages; i++) { %>
                      <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                      </li>
                    <% } %>
                  </ul>
                </nav>
              </div>
            <% } %>
          <% } else { %>
            <div class="text-center py-4">
              <p>No brands found. Add your first brand using the form.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('brandForm');
  
  // Clear existing error messages
  function clearErrors() {
    document.querySelectorAll('.error-message').forEach(msg => msg.remove());
    document.querySelectorAll('.input-error').forEach(input => {
      input.classList.remove('input-error');
    });
  }
  
  // Show error message
  function showError(element, message) {
    const errorDiv = document.createElement('div');
    errorDiv.className = 'error-message';
    errorDiv.textContent = message;
    element.classList.add('input-error');
    element.parentElement.appendChild(errorDiv);
  }
  
  // Validate image file
  function isValidImageFile(file) {
    const validTypes = ['image/jpeg', 'image/png', 'image/gif','image/webp'];
    return file && validTypes.includes(file.type);
  }
  
  // Form submission handler
  form.addEventListener('submit', function(event) {
    event.preventDefault();
    clearErrors();
    
    let isValid = true;
    const brandName = document.getElementById('brand_name');
    const brandImage = document.getElementById('brand_image');
    
    // Validate brand name
    if (!brandName.value.trim()) {
      showError(brandName, 'Brand Name is required');
      isValid = false;
    } else if (brandName.value.trim().length < 2) {
      showError(brandName, 'Brand Name must be at least 2 characters long');
      isValid = false;
    }
    
    // Validate image
    if (!brandImage.files.length) {
      showError(brandImage, 'Please select an image file');
      isValid = false;
    } else if (!isValidImageFile(brandImage.files[0])) {
      showError(brandImage, 'Please select a valid image file (JPG, PNG, or GIF)');
      isValid = false;
    }
    
    if (isValid) {
      form.submit();
    }
  });
  
  // Image preview handler
  window.previewImage = function(event) {
    const preview = document.getElementById('preview');
    const file = event.target.files[0];
    
    if (file && isValidImageFile(file)) {
      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = 'block';
      }
      reader.readAsDataURL(file);
    } else {
      preview.src = '';
      preview.style.display = 'none';
    }
  }
});
</script>

